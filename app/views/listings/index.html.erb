<div class="main-container">
  <div class="container content-container my-3">
    <!-- Header -->
    <div class="listings-header mb-3">
      <p>100+ yards available for your search</p>
      <h2><strong>Yards in Montreal</strong></h2>
      <p>filters:</p>
    </div>
    <!-- Build drop downs/interface for filtering results -->
    <div class="listings-dropdowns">
    </div>
    <!--  -->
    <!--  -->
    <div class="w-50">
      <%= form_tag listings_path, method: :get do %>
        <div class="input-group-append">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Enter a location"
          %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <!-- Cards -->
    <div class="cards-listing-container">
      <% @listings.each do |listing| %>
        <div class="card-listing mt-3">
          <div class="listing-img">
            <%= cl_image_tag listing.photo.key, crop: :thumb %>
          </div>
          <div class="listing-text">
            <h2><%= listing.title %></h2>
            <p class="address"><%= listing.address %></p>
            <p class="description"><%= listing.description %></p>
            <p><strong>Average rating: <%= listing.avg_rating %></strong></p>
            <p>⭐️⭐️⭐️⭐️⭐️</p>
            <hr>
          </div>
          <div class="listing-price">
            <h5>$<%= listing.price_per_hour %>0/hour</h5>
          </div>
          <%= link_to "more info", listing_path(listing), class: 'btn btn-primary more-info-btn' %>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Map -->
  <div class="container map-container my-3 p-3">
    <div id="map"
         style="width: 100%; height: 100%;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
