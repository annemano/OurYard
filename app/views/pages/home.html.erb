<!-- Mock up header for lower cards -->
<div class="d-flex justify-content-between align-items-end p-0 mt-1 mx-5">
  <h3>Our Top Picks</h3>
  <%= link_to 'Add Your Yard', new_listing_path, class: 'btn px-3 py-2 m-3' %>
</div>
<!-- Cards -->
<!-- <h3 class="top mx-5">Our top 3 picks for you!</h3> -->

<div class="home-card-container">
  <% @listings.each do |listing| %>
    <%= link_to listing_path(listing) do %>
      <div class="home-card rounded p-3">
        <%= cl_image_tag(listing.photos[0].key, alt: "", crop: :thumb) %>
        <div class="home-card-infos p-2">
          <div>
            <h3><%= listing.title %></h3>
            <p class="description"><%= listing.description %></p>
          </div>
          <div class="container d-flex justify-content-between p-0 mt-1">
            <p class="rating">
              <% if listing.avg_rating %>
                <%= "Rating: #{listing.avg_rating}" %>
              <% else %>
                 <%= "New Yard!" %>
              <% end %>
            </p>
            <h5 class="home-card-pricing"><%= "$#{listing.price_per_hour}/hour" %></h5>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
